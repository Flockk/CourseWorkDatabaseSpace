@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Space</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Space.styles.css" asp-append-version="true" />
</head>

@if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated!)
{
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Space</a>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarNavDropdown">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Constellations" asp-action="Index">Созвездия</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Крупные структуры
                                </a>
                                <ul class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="GalaxyClusters" asp-action="Index">Скопления галактик</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="GalaxyGroups" asp-action="Index">Группы галактик</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Galaxies" asp-action="Index">Галактики</a>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Космические объекты
                                </a>
                                <ul class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="Nebulae" asp-action="Index">Туманности</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="StarClusters" asp-action="Index">Звёздные скопления</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="BlackHoles" asp-action="Index">Чёрные дыры</a>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Ближний космос
                                </a>
                                <ul class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="PlanetarySystems" asp-action="Index">Планетные системы</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Stars" asp-action="Index">Звёзды</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Planets" asp-action="Index">Планеты</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Comets" asp-action="Index">Кометы</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Asteroids" asp-action="Index">Астероиды</a>
                                </ul>
                            </li>
                        </ul>
                        <span class="navbar-text">
                            Вы администратор |
                        </span>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 Space <a asp-area="" asp-controller="Home"></a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
}
else
{
