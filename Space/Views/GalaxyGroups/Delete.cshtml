@model Space.Models.GalaxyGroups

@{
    ViewData["Title"] = "Удаление группы галактик";
}

<h3>Удаление группы галактик</h3>

<div>
    <hr />
    <dl class="row">
        <div class="form-group">
            <partial name="_GlxgroupImage" />
        </div>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GlxgroupName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GlxgroupName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GlxgroupType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GlxgroupType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GlxgroupRightAscension)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GlxgroupRightAscension)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GlxgroupDeclination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GlxgroupDeclination)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GlxgroupRedshift)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GlxgroupRedshift)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cons)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cons.ConsName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GlxgroupId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
