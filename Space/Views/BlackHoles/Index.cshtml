@model IEnumerable<Space.Models.BlackHoles>

@{
    ViewData["Title"] = "Чёрные дыры";
}

<h1>Чёрные дыры</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>

<p>
    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
    <input type="text" id="Search" placeholder="Поиск" class="form-control" autocomplete="off" />
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlackholeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlackholeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlackholeRightAscension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlackholeDeclination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlackholeDistance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Glx)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.BlackholeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlackholeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlackholeRightAscension)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlackholeDeclination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlackholeDistance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cons.ConsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Glx.GlxName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BlackHoleId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.BlackHoleId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.BlackHoleId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1) {
                return true
            }
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });
        });
    });
</script>