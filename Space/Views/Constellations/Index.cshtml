@model IEnumerable<Space.Models.Constellations>

@{
    ViewData["Title"] = "Созвездия";
}

<h1>Созвездия</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>

<p>
    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
    <input type="text" id="Search" placeholder="Поиск" class="form-control" autocomplete="off" />
</p>

<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsNameSortParm"]">@Html.DisplayNameFor(model => model.ConsName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsAbbreviationSortParm"]">@Html.DisplayNameFor(model => model.ConsAbbreviation)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsSymbolismSortParm"]">@Html.DisplayNameFor(model => model.ConsSymbolism)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsRightAscensionSortParm"]">@Html.DisplayNameFor(model => model.ConsRightAscension)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsDeclinationSortParm"]">@Html.DisplayNameFor(model => model.ConsDeclination)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsSquareSortParm"]">@Html.DisplayNameFor(model => model.ConsSquare)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsVisibleInLatitudesSortParm"]">@Html.DisplayNameFor(model => model.ConsVisibleInLatitudes)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.ConsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsAbbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsSymbolism)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsRightAscension)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsDeclination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsSquare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsVisibleInLatitudes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConsId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.ConsId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.ConsId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1) {
                return true
            }
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });
        });
    });
</script>