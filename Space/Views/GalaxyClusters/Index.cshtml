@model IEnumerable<Space.Models.GalaxyClusters>

@{
    ViewData["Title"] = "Скопления галактик";
}

<h1>Скопления галактик</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>

<p>
    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
    <input type="text" id="Search" placeholder="Поиск" class="form-control" autocomplete="off" />
</p>

<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GlxclusterNameSortParm"]">@Html.DisplayNameFor(model => model.GlxclusterName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GlxclusterTypeSortParm"]">@Html.DisplayNameFor(model => model.GlxclusterType)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GlxclusterRightAscensionSortParm"]">@Html.DisplayNameFor(model => model.GlxclusterRightAscension)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GlxclusterDeclinationSortParm"]">@Html.DisplayNameFor(model => model.GlxclusterDeclination)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GlxclusterRedshiftSortParm"]">@Html.DisplayNameFor(model => model.GlxclusterRedshift)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsSortParm"]">@Html.DisplayNameFor(model => model.Cons)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.GlxclusterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlxclusterType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlxclusterRightAscension)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlxclusterDeclination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlxclusterRedshift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cons.ConsName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GlxclusterId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.GlxclusterId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.GlxclusterId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1) {
                return true
            }
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });
        });
    });
</script>