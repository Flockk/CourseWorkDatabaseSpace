@model Space.Models.Comets

@{
	var imgText = "";
	imgText = Model.CometName.Trim();
}

@if (Model.CometImage == null)
{
	<img src="/Img/NoImage.png" width="425" height="425" class="img-fluid float-md-start" />
}
else
{
	<img src="@Model.CometImage" width="450" height="450" class="img-fluid float-md-start" alt="@imgText" title="@imgText" />
}