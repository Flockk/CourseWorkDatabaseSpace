@model Space.Models.Comets

@{
    ViewData["Title"] = "Детали кометы";
}

<h3>Детали кометы</h3>
<div>
    <hr />
    <dl class="row">
        <div class="form-group">
            <partial name="_CometImage" />
        </div>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CometName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CometName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CometOrbitalPeriod)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CometOrbitalPeriod)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CometSemiMajorAxis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CometSemiMajorAxis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CometPerihelion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CometPerihelion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CometEccentricity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CometEccentricity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CometOrbitalInclination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CometOrbitalInclination)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Star)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Star.StarName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CometId">Изменить</a> |
    <a asp-action="Index">Назад</a>
</div>
