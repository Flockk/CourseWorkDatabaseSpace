@model Space.Models.Asteroids

@{
    ViewData["Title"] = "Добавление астероида";
}


<style>
    .field-validation-error {
        color: #b94a48;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }

    input.valid {
        border: 1px solid #16a085;
    }

    .validation-summary-errors {
        color: #b94a48;
    }
</style>

<p class="text-center fs-2">Добавление астероида</p>
<hr />
<form class="row g-3" method="post" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-6">
        <label asp-for="StarId" class="control-label"></label>
        <select asp-for="StarId" class="form-control" asp-items="ViewBag.StarId">
            <option value="">Выберите звезду</option>
        </select>
    </div>
    <div class="col-md-3">
        <label asp-for="AstDiameter" class="control-label"></label>
        <input asp-for="AstDiameter" class="form-control" />
        <span asp-validation-for="AstDiameter" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="AstOrbitalEccentricity" class="control-label"></label>
        <input asp-for="AstOrbitalEccentricity" class="form-control" />
        <span asp-validation-for="AstOrbitalEccentricity" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="AstName" class="control-label"></label>
        <input asp-for="AstName" class="form-control" />
        <span asp-validation-for="AstName" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="AstOrbitalInclination" class="control-label"></label>
        <input asp-for="AstOrbitalInclination" class="form-control" />
        <span asp-validation-for="AstOrbitalInclination" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="AstArgumentOfPerihelion" class="control-label"></label>
        <input asp-for="AstArgumentOfPerihelion" class="form-control" />
        <span asp-validation-for="AstArgumentOfPerihelion" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label for="formFile" class="form-label"></label>
        <input class="form-control" type="file" name="formFile">
    </div>
    <div class="col-md-6">
        <label asp-for="AstMeanAnomaly" class="control-label"></label>
        <input asp-for="AstMeanAnomaly" class="form-control" />
        <span asp-validation-for="AstMeanAnomaly" class="text-danger"></span>
    </div>
    <div class="col-12 d-flex justify-content-center gap-2">
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
