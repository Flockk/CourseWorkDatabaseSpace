@model Space.Models.Asteroids

@{
	var imgText = "";
	imgText = "Астероид" + " " + Model.AstName.Trim();
}

@if (Model.AstImage == null)
{
		<img src="/Img/NoImage.png" width="425" height="425" class="img-fluid float-md-start" alt="@imgText" title="@imgText" />
}
else
{
		<img src="@Model.AstImage" width="450" height="450" class="img-fluid float-md-start" alt="@imgText" title="@imgText" />
}