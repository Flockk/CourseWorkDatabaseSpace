@model IEnumerable<Space.Models.Asteroids>

@{
    ViewData["Title"] = "Астероиды";
}

<h1>Астероиды</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>

<p>
    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
    <input type="text" id="Search" placeholder="Поиск" class="form-control" autocomplete="off" />
</p>

<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AstNameSortParm"]">@Html.DisplayNameFor(model => model.AstName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AstDiameterSortParm"]">@Html.DisplayNameFor(model => model.AstDiameter)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AstOrbitalEccentricitySortParm"]">@Html.DisplayNameFor(model => model.AstOrbitalEccentricity)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AstOrbitalInclinationSortParm"]">@Html.DisplayNameFor(model => model.AstOrbitalInclination)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AstArgumentOfPerihelionSortParm"]">@Html.DisplayNameFor(model => model.AstArgumentOfPerihelion)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AstMeanAnomalySortParm"]">@Html.DisplayNameFor(model => model.AstMeanAnomaly)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StarSortParm"]">@Html.DisplayNameFor(model => model.Star)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="Search"> 
            <td>
                @Html.DisplayFor(modelItem => item.AstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AstDiameter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AstOrbitalEccentricity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AstOrbitalInclination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AstArgumentOfPerihelion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AstMeanAnomaly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Star.StarName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AstId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.AstId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.AstId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        function Contains(text_one, text_two){
            if (text_one.indexOf(text_two) != -1){
                return true
            }
        }
        $("#Search").keyup(function(){
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function(){
                if(!Contains($(this).text().toLowerCase(), searchText)){
                    $(this).hide();
                }
                else{
                    $(this).show();
                }
            });
        });
    });
</script>

