@model Space.Models.Nebulae

@{
    ViewData["Title"] = "Удаление туманности";
}

<h3>Удаление туманности</h3>

<div>
    <hr />
    <dl class="row">
        <div class="form-group">
            <partial name="_NebulaImage" />
        </div>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NebulaName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NebulaName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NebulaType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NebulaType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NebulaRightAscension)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NebulaRightAscension)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NebulaDeclination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NebulaDeclination)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NebulaDistance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NebulaDistance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cons)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cons.ConsName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Glx)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Glx.GlxName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NebulaId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
