@model Space.Models.Nebulae

@{
    ViewData["Title"] = "Добавление туманности";
}

<h3>Добавление туманности</h3>

<style>
    .field-validation-error {
        color: #b94a48;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }

    input.valid {
        border: 1px solid #16a085;
    }

    .validation-summary-errors {
        color: #b94a48;
    }
</style>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConsId" class="control-label"></label>
                <select asp-for="ConsId" class ="form-control" asp-items="ViewBag.ConsId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GlxId" class="control-label"></label>
                <select asp-for="GlxId" class ="form-control" asp-items="ViewBag.GlxId">
                    <option value="">Выберите галактику</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NebulaName" class="control-label"></label>
                <input asp-for="NebulaName" class="form-control" />
                <span asp-validation-for="NebulaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NebulaType" class="control-label"></label>
                <input asp-for="NebulaType" class="form-control" />
                <span asp-validation-for="NebulaType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NebulaRightAscension" class="control-label"></label>
                <input asp-for="NebulaRightAscension" type="time" name="NebulaRightAscension" step="2" class="form-control" />
                <span asp-validation-for="NebulaRightAscension" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NebulaDeclination" class="control-label"></label>
                <input asp-for="NebulaDeclination" class="form-control" />
                <span asp-validation-for="NebulaDeclination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NebulaDistance" class="control-label"></label>
                <input asp-for="NebulaDistance" class="form-control" />
                <span asp-validation-for="NebulaDistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formFile" class="form-label">Выберите изображение </label>
                <input class="form-control" type="file" name="formFile">
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
