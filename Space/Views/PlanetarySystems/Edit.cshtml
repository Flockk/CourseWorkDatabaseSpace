@model Space.Models.PlanetarySystems

@{
    ViewData["Title"] = "Изменение планетной системы";
}

<style>
    .field-validation-error {
        color: #b94a48;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }

    input.valid {
        border: 1px solid #16a085;
    }

    .validation-summary-errors {
        color: #b94a48;
    }
</style>

<p class="text-center fs-2 font-monospace">Изменение планетной системы</p>
<hr />

<div class="container clearfix">
    <partial name="_PlanetsystemImage" />
    <form class="row g-3 justify-content-start" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PlanetsystemId" />
        <div class="col-md-6">
            <label asp-for="ConsId" class="control-label"></label>
            <select asp-for="ConsId" class="form-control" asp-items="ViewBag.ConsId">
                <option value="">Выберите созвездие</option>
            </select>
        </div>
        <div class="col-md-6">
            <label asp-for="PlanetsystemName" class="control-label"></label>
            <input asp-for="PlanetsystemName" class="form-control" />
            <span asp-validation-for="PlanetsystemName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="GlxId" class="control-label"></label>
            <select asp-for="GlxId" class="form-control" asp-items="ViewBag.GlxId">
                <option value="">Выберите галактику</option>
            </select>
        </div>
        <div class="col-md-6">
            <label asp-for="PlanetsystemConfirmedPlanets" class="control-label"></label>
            <input asp-for="PlanetsystemConfirmedPlanets" class="form-control" />
            <span asp-validation-for="PlanetsystemConfirmedPlanets" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="formFile" class="form-label"></label>
            <input class="form-control" type="file" name="formFile">
        </div>
        @if (Model.PlanetsystemImage != null)
        {
            <div class="col-md-12">
                <div class="input-group-text">
                    <input asp-for="PlanetsystemImage" class="form-check-input mt-0" type="radio" value="" aria-label="Radio button for following text input" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                        ㅤУдалить изображение?
                    </label>
                </div>
                <input asp-for="PlanetsystemImage" type="text" class="form-control" aria-label="Text input with radio button" hidden>
            </div>
        }
        <div class="col-12 d-flex justify-content-center gap-2">
            <a asp-action="Index" class="btn btn-secondary">Назад</a>
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>

</div>
<div class="text-nowrap row justify-content-center">
    ㅤ
</div>
<hr />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
