@model IEnumerable<Space.Models.PlanetarySystems>

@{
    ViewData["Title"] = "Планетные системы";
}

<h1>Планетные системы</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>

<p>
    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
    <input type="text" id="Search" placeholder="Поиск" class="form-control" autocomplete="off" />
</p>

<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PlanetsystemNameSortParm"]">@Html.DisplayNameFor(model => model.PlanetsystemName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PlanetsystemConfirmedPlanetsSortParm"]">@Html.DisplayNameFor(model => model.PlanetsystemConfirmedPlanets)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsSortParm"]">@Html.DisplayNameFor(model => model.Cons)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GlxSortParm"]">@Html.DisplayNameFor(model => model.Glx)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.PlanetsystemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlanetsystemConfirmedPlanets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cons.ConsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Glx.GlxName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlanetsystemId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.PlanetsystemId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.PlanetsystemId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1) {
                return true
            }
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });
        });
    });
</script>