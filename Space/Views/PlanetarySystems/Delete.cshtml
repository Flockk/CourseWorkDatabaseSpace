@model Space.Models.PlanetarySystems

@{
    ViewData["Title"] = "Удаление планетной системы";
}

<h3>Удаление планетной системы</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlanetsystemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlanetsystemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlanetsystemConfirmedPlanets)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlanetsystemConfirmedPlanets)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cons)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cons.ConsName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Glx)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Glx.GlxName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlanetsystemId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
