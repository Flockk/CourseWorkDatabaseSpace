@model Space.Models.Planets

@{
    ViewData["Title"] = "Удаление планеты";
}

<h3>Удаление планеты</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlntName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlntName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlntEccentricity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlntEccentricity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlntSemiMajorAxis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlntSemiMajorAxis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlntOrbitalPeriod)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlntOrbitalPeriod)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlntArgumentOfPerihelion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlntArgumentOfPerihelion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlntMass)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlntMass)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cons)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cons.ConsName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Star)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Star.StarName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlntId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
