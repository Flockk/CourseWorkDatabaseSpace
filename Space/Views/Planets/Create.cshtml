@model Space.Models.Planets

@{
    ViewData["Title"] = "Добавление планеты";
}

<h3>Добавление планеты</h3>

<style>
    .field-validation-error {
        color: #b94a48;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }

    input.valid {
        border: 1px solid #16a085;
    }

    .validation-summary-errors {
        color: #b94a48;
    }
</style>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConsId" class="control-label"></label>
                <select asp-for="ConsId" class ="form-control" asp-items="ViewBag.ConsId">
                    <option value="">Выберите созвездие</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StarId" class="control-label"></label>
                <select asp-for="StarId" class ="form-control" asp-items="ViewBag.StarId">
                    <option value="">Выберите звезду</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PlntName" class="control-label"></label>
                <input asp-for="PlntName" class="form-control" />
                <span asp-validation-for="PlntName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlntEccentricity" class="control-label"></label>
                <input asp-for="PlntEccentricity" class="form-control" />
                <span asp-validation-for="PlntEccentricity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlntSemiMajorAxis" class="control-label"></label>
                <input asp-for="PlntSemiMajorAxis" class="form-control" />
                <span asp-validation-for="PlntSemiMajorAxis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlntOrbitalPeriod" class="control-label"></label>
                <input asp-for="PlntOrbitalPeriod" class="form-control" />
                <span asp-validation-for="PlntOrbitalPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlntArgumentOfPerihelion" class="control-label"></label>
                <input asp-for="PlntArgumentOfPerihelion" class="form-control" />
                <span asp-validation-for="PlntArgumentOfPerihelion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlntMass" class="control-label"></label>
                <input asp-for="PlntMass" class="form-control" />
                <span asp-validation-for="PlntMass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadedImage" class="control-label"></label>
                <div class="mb-3">
                    <input class="form-control" type="file" id="ImageUrl"
                onchange="document.getElementById('ImageUrlPrv').src = window.URL.createObjectURL(this.files[0])">
                </div>
                <span asp-validation-for="UploadedImage" class="text-danger"></span>
                <img id="ImageUrlPrv" src="" alt="Image" width="150"
                    height="150" style="border:1px" ;marging-top:20px; margin-left:120px;" />
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
