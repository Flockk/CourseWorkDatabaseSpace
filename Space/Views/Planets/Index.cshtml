@model IEnumerable<Space.Models.Planets>

@{
    ViewData["Title"] = "Планеты";
}

<h1>Планеты</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>

<p>
    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
    <input type="text" id="Search" placeholder="Поиск" class="form-control" autocomplete="off" />
</p>

<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PlntNameSortParm"]">@Html.DisplayNameFor(model => model.PlntName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PlntEccentricitySortParm"]">@Html.DisplayNameFor(model => model.PlntEccentricity)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PlntSemiMajorAxisSortParm"]">@Html.DisplayNameFor(model => model.PlntSemiMajorAxis)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PlntOrbitalPeriodSortParm"]">@Html.DisplayNameFor(model => model.PlntOrbitalPeriod)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PlntArgumentOfPerihelionSortParm"]">@Html.DisplayNameFor(model => model.PlntArgumentOfPerihelion)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PlntMassSortParm"]">@Html.DisplayNameFor(model => model.PlntMass)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsSortParm"]">@Html.DisplayNameFor(model => model.Cons)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StarSortParm"]">@Html.DisplayNameFor(model => model.Star)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.PlntName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlntEccentricity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlntSemiMajorAxis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlntOrbitalPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlntArgumentOfPerihelion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlntMass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cons.ConsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Star.StarName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlntId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.PlntId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.PlntId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1) {
                return true
            }
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });
        });
    });
</script>